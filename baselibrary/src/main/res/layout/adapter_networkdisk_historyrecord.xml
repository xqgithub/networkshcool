<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource,RtlCompat">

    <ImageView
        android:id="@+id/iv_record_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/networkdisk_historyrecord"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/tv_record_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_record_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_record_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_record_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:text="第三单课后练习题"
        android:textSize="14dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/networkshcool_e1f20" />


    <View
        android:id="@+id/dividingline_horizontal"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_record_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:background="#338f92a1"
        android:layout_height="1px" />
</androidx.constraintlayout.widget.ConstraintLayout>