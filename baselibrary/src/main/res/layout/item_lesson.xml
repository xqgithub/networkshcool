<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="76dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="26dp"
            android:layout_height="26dp">

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxWidth="25dp"
                android:maxHeight="25dp"
                android:src="@mipmap/ic_complete" />
        </RelativeLayout>


        <View
            android:id="@+id/line_status"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@drawable/dottde_v_line"
            android:layerType="software" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:text="第二单元第一节课"
            android:textColor="@color/appblack"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_classtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="2-18 18:15-20:00"
                android:textColor="@color/bg_gray_text"
                android:textSize="13sp"></TextView>

            <TextView
                android:id="@+id/class_time_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="@string/course_dot"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/tv_not_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/course_not_start"
                android:textSize="13sp"
                android:visibility="gone"></TextView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_class_complete"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_task"
                    android:layout_width="84dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_bg_homework"
                    android:gravity="center"
                    android:text="@string/tasks"
                    android:textColor="#4267B2"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="84dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_bg_comment"
                    android:gravity="center"
                    android:text="@string/comment"
                    android:textColor="#FF2855"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/tv_reply"
                    android:layout_width="84dp"
                    android:layout_height="36dp"
                    android:background="@drawable/shape_bg_reply"
                    android:gravity="center"
                    android:text="@string/reply"
                    android:textColor="#47C1E4"
                    android:textSize="14sp">

                </TextView>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/enter_room"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_blue_bg"
            android:gravity="center"
            android:text="@string/enter_class"
            android:textColor="@color/appwhite"
            android:textSize="16sp">

        </TextView>

    </LinearLayout>
</LinearLayout>