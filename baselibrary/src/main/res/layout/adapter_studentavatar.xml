<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="95dp"
    tools:ignore="MissingDefaultResource,RtlCompat">

    <com.talkcloud.networkshcool.baselibrary.weiget.CircleProgressbar
        android:id="@+id/cp_avator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="61dp"
        android:visibility="invisible"
        android:layout_height="61dp" />


    <com.talkcloud.networkshcool.baselibrary.weiget.RoundImageView
        android:id="@+id/riv_avator"
        android:layout_width="62dp"
        android:layout_height="62dp"
        app:layout_constraintTop_toTopOf="@+id/cp_avator"
        app:layout_constraintBottom_toBottomOf="@+id/cp_avator"
        app:layout_constraintEnd_toEndOf="@+id/cp_avator"
        app:layout_constraintStart_toStartOf="@+id/cp_avator"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_default_head_img"
        app:type="oval" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_carryout"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/riv_avator"
        app:layout_constraintBottom_toBottomOf="@+id/riv_avator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_carryout"
            android:layout_width="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/student_reviewed"
            android:scaleType="fitXY"
            android:layout_height="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_studentname"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/riv_avator"
        app:layout_constraintStart_toStartOf="@+id/riv_avator"
        app:layout_constraintEnd_toEndOf="@+id/riv_avator"
        android:layout_marginTop="8dp"
        android:text="路飞"
        android:textSize="14dp"
        android:textColor="@color/networkshcool_e1f20"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>