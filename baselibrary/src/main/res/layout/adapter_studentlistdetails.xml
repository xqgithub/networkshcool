<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:ignore="MissingDefaultResource,RtlCompat">

    <com.talkcloud.networkshcool.baselibrary.weiget.RoundImageView
        android:id="@+id/iv_avator"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_default_head_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        app:type="oval" />

    <TextView
        android:id="@+id/tv_students_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_avator"
        app:layout_constraintStart_toEndOf="@+id/iv_avator"
        app:layout_constraintBottom_toTopOf="@+id/tv_students_age"
        android:layout_marginStart="16dp"
        app:layout_constraintVertical_chainStyle="spread"
        android:text="111"
        android:textColor="@color/networkshcool_e1f20"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_students_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_students_num"
        app:layout_constraintStart_toStartOf="@+id/tv_students_num"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avator"
        android:text="1å²"
        android:textColor="@color/networkshcool_8f92a1"
        android:textSize="13dp" />


</androidx.constraintlayout.widget.ConstraintLayout>