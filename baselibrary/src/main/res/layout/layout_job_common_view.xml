<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp">

    <com.talkcloud.networkshcool.baselibrary.weiget.TKJobContentView
        android:id="@+id/mJobContentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.talkcloud.networkshcool.baselibrary.weiget.TKJobMediaView
        android:id="@+id/mJobMediaView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <com.talkcloud.networkshcool.baselibrary.weiget.TKJobFoldView
        android:id="@+id/mJobFoldView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

</LinearLayout>

