<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_job_audio"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/mJobAudioPlayIv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_job_audio_play" />

        <ProgressBar
            android:id="@+id/mJobAudioProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="134dp"
            android:layout_height="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/bg_job_audio_progress" />

        <TextView
            android:id="@+id/mJobAudioDurationIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00:35"
            android:textColor="@color/my_tips_color"
            android:textSize="12dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/mJobAudioDelIv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/icon_audio_del" />
</LinearLayout>