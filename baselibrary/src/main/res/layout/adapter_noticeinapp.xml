<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp"
    android:background="@drawable/networkshcool_shadow_bg"
    tools:ignore="MissingDefaultResource,RtlCompat">

    <ImageView
        android:id="@+id/iv_notice_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_homeworkreminder" />

    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_notice_type"
        app:layout_constraintStart_toEndOf="@+id/iv_notice_type"
        android:layout_marginStart="16dp"
        android:textColor="@color/networkshcool_e1f20"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="任务提醒" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@+id/tv_notice_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_notice_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_right_arrow" />

    <TextView
        android:id="@+id/tv_notice_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_notice_title"
        app:layout_constraintStart_toStartOf="@+id/tv_notice_title"
        app:layout_constraintEnd_toEndOf="@+id/iv_more"
        android:layout_marginTop="6dp"
        android:textColor="@color/networkshcool_e1f20"
        android:textSize="15dp"
        android:text="综合性学习：高频文化常识以及高频题型梳理，这节课的作业还未完成，尽快完成作业哦～" />

    <TextView
        android:id="@+id/tv_notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_notice_content"
        app:layout_constraintStart_toStartOf="@+id/tv_notice_title"
        android:layout_marginTop="10dp"
        android:textColor="@color/networkshcool_8f92a1"
        android:textSize="12dp"
        android:text="10分钟前" />


</androidx.constraintlayout.widget.ConstraintLayout>