<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <com.talkcloud.networkshcool.baselibrary.weiget.RoundImageView
        android:id="@+id/img_avator"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_default_head_img"
        app:type="oval" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="zhangshan"
            android:textColor="#1E1F20"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:text="teacher"
            android:textColor="@color/bg_gray_text"
            android:textSize="13sp">

        </TextView>


    </LinearLayout>


    <!-- 提醒按钮 -->
    <TextView
        android:id="@+id/tv_remind"
        android:layout_width="66dp"
        android:layout_height="36dp"
        android:textSize="14dp"
        android:textColor="@color/appwhite"
        android:gravity="center"
        android:text="@string/student_list_remind"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_commit_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:drawableRight="@mipmap/ic_right_back"
        android:gravity="center_vertical"
        android:text="@string/gotorate"
        android:textColor="@color/bg_gray_text"
        android:textSize="14sp">

    </TextView>
</LinearLayout>