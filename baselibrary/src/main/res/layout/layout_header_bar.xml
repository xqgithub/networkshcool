<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/mHeaderBarLeftIv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        tools:src="@mipmap/vcodeinput_return" />

    <TextView
        android:id="@+id/mHeaderBarTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="#FF1E1F20"
        android:textSize="18dp"
        tools:text="Feedback" />

    <TextView
        android:id="@+id/mHeaderBarRightTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:enabled="false"
        android:textColor="@color/text_color_headerbar_right"
        android:textSize="16dp"
        tools:text="存草稿" />


</RelativeLayout>
