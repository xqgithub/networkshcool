<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="6dp"
    tools:ignore="MissingDefaultResource,RtlCompat">

    <com.talkcloud.networkshcool.baselibrary.weiget.RoundImageView
        android:id="@+id/iv_avator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_default_head_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:type="oval" />

    <TextView
        android:id="@+id/tv_students_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_avator"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avator"
        app:layout_constraintStart_toEndOf="@+id/iv_avator"
        android:layout_marginStart="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="+7"
        android:textColor="@color/appwhite"
        android:textSize="12dp">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>