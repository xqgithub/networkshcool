<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="18dp">

        <TextView
            android:id="@+id/mJobCommentTipTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/hw_feedback"
            android:textColor="@color/text_main_black_color"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.talkcloud.networkshcool.baselibrary.weiget.RatingBarView
            android:id="@+id/mJobCommentRbView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/mJobCommentTv"
            app:starEmpty="@drawable/comment_littleredflower_unselected"
            app:starFill="@drawable/comment_littleredflower_selected"
            app:starImageSize="20dp"
            app:starSpace="6dp" />


        <TextView
            android:id="@+id/mJobCommentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_main_black_color"
            android:textSize="12dp"
            tools:text="Excellent+3" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/divider_line_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.talkcloud.networkshcool.baselibrary.weiget.RoundImageView
            android:id="@+id/mJobCommentHeadImgIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_default_head_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mJobCommentUsernameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main_black_color"
                android:textSize="16dp"
                tools:text="李笑笑" />

            <TextView
                android:id="@+id/mJobCommentTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/my_tips_color"
                android:textSize="12dp"
                tools:text="03-21 19:30" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mJobCommentMore"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_more"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:paddingStart="56dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/mJobCommentContentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main_black_color"
            android:textSize="16dp"
            tools:text="作业完成的很棒，字迹工整，很棒哦，请继续加油！～" />


        <com.talkcloud.networkshcool.baselibrary.weiget.TKJobMediaView
            android:id="@+id/mJobCommentMediaView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>


        <com.talkcloud.networkshcool.baselibrary.weiget.TKJobAudioView
            android:visibility="gone"
            android:id="@+id/mJobCommentAudioView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

    </LinearLayout>


</LinearLayout>





