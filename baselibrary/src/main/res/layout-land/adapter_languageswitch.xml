<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource,RtlCompat">


    <TextView
        android:id="@+id/tv_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/dimen_30x"
        android:layout_marginTop="@dimen/dimen_16x"
        android:textColor="@color/networkshcool_e1f20"
        android:textSize="@dimen/dimen_18x"
        android:text="@string/language_name_default"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_namedescription"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        android:layout_width="wrap_content"
        android:textColor="@color/networkshcool_8f92a1"
        android:layout_marginTop="@dimen/dimen_5x"
        android:textSize="@dimen/dimen_12x"
        android:text=""
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="@dimen/dimen_24x"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/dimen_30x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:src="@mipmap/languageswitch_selected"
        android:layout_height="@dimen/dimen_24x" />

    <View
        android:id="@+id/dividingline_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_namedescription"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_16x"
        android:background="@color/networkshcool_338f92a1"
        android:layout_height="1px" />

</androidx.constraintlayout.widget.ConstraintLayout>