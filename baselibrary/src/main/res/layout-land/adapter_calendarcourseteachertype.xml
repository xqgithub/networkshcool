<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource,RtlCompat">

    <com.talkcloud.networkshcool.baselibrary.weiget.RoundImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/img_avator"
        android:layout_width="@dimen/dimen_30x"
        android:layout_height="@dimen/dimen_30x"
        android:src="@mipmap/app_logo_shandian"
        app:type="circle" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_avator"
        app:layout_constraintStart_toEndOf="@+id/img_avator"
        android:layout_marginStart="@dimen/dimen_7x"
        android:gravity="center"
        android:text="zhangshan"
        android:textColor="#cc1e1f20"
        android:textSize="@dimen/dimen_12x" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="teacher"
        android:textColor="#998f92a1"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        android:textSize="@dimen/dimen_12x" />


</androidx.constraintlayout.widget.ConstraintLayout>