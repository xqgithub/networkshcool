<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/networkshcool_shadow_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_50x"
    tools:ignore="MissingDefaultResource,RtlCompat">

    <TextView
        android:id="@+id/class_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="9.30"
        android:layout_marginStart="@dimen/dimen_20x"
        android:layout_marginTop="@dimen/dimen_24x"
        android:textColor="@color/networkshcool_e1f20"
        android:textSize="@dimen/dimen_28x" />

    <TextView
        android:id="@+id/class_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_5x"
        android:paddingEnd="@dimen/dimen_5x"
        android:paddingTop="@dimen/dimen_3x"
        android:paddingBottom="@dimen/dimen_3x"
        android:text="1v1"
        android:layout_marginStart="@dimen/dimen_6x"
        app:layout_constraintTop_toTopOf="@+id/class_time"
        app:layout_constraintBottom_toBottomOf="@+id/class_time"
        app:layout_constraintStart_toEndOf="@+id/class_time"
        android:textSize="@dimen/dimen_10x" />


    <TextView
        android:id="@+id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第二单元第一节课"
        android:layout_marginTop="@dimen/dimen_6x"
        app:layout_constraintTop_toBottomOf="@+id/class_time"
        app:layout_constraintStart_toStartOf="@+id/class_time"
        android:textColor="@color/networkshcool_e1f20"
        android:textSize="@dimen/dimen_16x" />


    <TextView
        android:id="@+id/class_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程状态"
        android:layout_marginEnd="@dimen/dimen_20x"
        app:layout_constraintTop_toTopOf="@+id/class_type"
        app:layout_constraintBottom_toBottomOf="@+id/class_type"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/networkshcool_e1f20"
        android:textSize="@dimen/dimen_12x" />

    <ImageView
        android:id="@+id/iv_not_class"
        android:layout_width="@dimen/dimen_13x"
        app:layout_constraintTop_toTopOf="@+id/class_status"
        app:layout_constraintBottom_toBottomOf="@+id/class_status"
        app:layout_constraintEnd_toStartOf="@+id/class_status"
        android:src="@mipmap/ic_time"
        android:layout_marginEnd="@dimen/dimen_6x"
        android:layout_height="@dimen/dimen_13x" />


    <TextView
        android:id="@+id/enter_room"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_54x"
        android:text="@string/enter_class"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_20x"
        android:paddingEnd="@dimen/dimen_20x"
        android:paddingTop="@dimen/dimen_15x"
        android:paddingBottom="@dimen/dimen_15x"
        app:layout_constraintEnd_toEndOf="@+id/class_status"
        app:layout_constraintTop_toBottomOf="@+id/class_status"
        android:layout_marginTop="@dimen/dimen_45x"
        android:background="@color/networkshcool_e1f20"
        android:textColor="@color/appwhite"
        android:textSize="@dimen/dimen_18x"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/networkshcool_e1f20"
        app:layout_constraintEnd_toEndOf="@+id/class_status"
        android:gravity="center"
        android:text="@string/reply"
        android:layout_marginTop="@dimen/dimen_55x"
        android:paddingStart="@dimen/dimen_30x"
        android:paddingEnd="@dimen/dimen_30x"
        android:paddingTop="@dimen/dimen_8x"
        android:paddingBottom="@dimen/dimen_8x"
        app:layout_constraintTop_toBottomOf="@+id/class_status"
        android:textColor="@color/networkshcool_47c1e4"
        android:textSize="@dimen/dimen_14x" />


    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/networkshcool_e1f20"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_30x"
        android:paddingTop="@dimen/dimen_8x"
        android:paddingEnd="@dimen/dimen_30x"
        android:paddingBottom="@dimen/dimen_8x"
        android:text="@string/comment"
        android:textColor="@color/networkshcool_ff2855"
        android:textSize="@dimen/dimen_14x"
        app:layout_constraintBottom_toBottomOf="@+id/tv_reply"
        app:layout_constraintEnd_toStartOf="@+id/tv_reply"
        app:layout_constraintTop_toTopOf="@+id/tv_reply"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/networkshcool_e1f20"
        app:layout_constraintEnd_toStartOf="@+id/tv_comment"
        android:gravity="center"
        android:text="Task"
        android:paddingStart="@dimen/dimen_30x"
        android:paddingEnd="@dimen/dimen_30x"
        android:paddingTop="@dimen/dimen_8x"
        android:paddingBottom="@dimen/dimen_8x"
        app:layout_constraintTop_toTopOf="@+id/tv_comment"
        android:layout_marginEnd="@dimen/dimen_13x"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_comment"
        android:textColor="@color/networkshcool_4267b2"
        android:textSize="@dimen/dimen_14x" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_teacher_assitor"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@+id/class_time"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dimen_280x"
        app:layout_constraintTop_toTopOf="@+id/tv_reply"
        app:layout_constraintBottom_toBottomOf="@+id/tv_reply"
        android:overScrollMode="never"
        android:layout_height="@dimen/dimen_50x" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tips"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/class_status"
        app:layout_constraintStart_toStartOf="@+id/class_time"
        app:layout_constraintEnd_toEndOf="@+id/class_status"
        android:layout_marginTop="@dimen/dimen_119x"
        android:background="@color/appwhite"
        android:layout_height="@dimen/dimen_36x">

        <ImageView
            android:id="@+id/iv_tips"
            android:layout_width="@dimen/dimen_22x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimen_19x"
            android:src="@mipmap/ic_tip"
            android:layout_height="@dimen/dimen_22x" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_tips"
            android:textColor="@color/networkshcool_353f56"
            android:textSize="@dimen/dimen_13x"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dimen_6x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_tips" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>